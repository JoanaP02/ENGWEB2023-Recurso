extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h2 Consulta de #{consulta.nome} em #{consulta.data}
        br
        .w3-container.w3-padding
            h4 ID: #{consulta._id}
            h4 Data: #{consulta.data}
            h4 Nome: #{consulta.nome}
            h4 NIF: #{consulta.nif}
            h4 Idade: #{consulta.idade}
            h4 Número de Operações: #{consulta.nr_operacoes}
            each operacao in consulta.operacoes
                h4
                    a(href='/intervencoes/'+operacao.codigo)= operacao.codigo
                    | : #{operacao.nome} - #{operacao.descricao}

        footer.w3-container.w3-teal
            h5 Generated by Joana Pereira - #[a(href="/") Return]