extends layout
block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Consultas de estética
    .w3-container
      table.w3-table-all
        tr
          th Id
          th Data
          th Nome
          th Idade 
          th Sexo
          th Número de intervenções
        
        each consulta in consultas
          tr
            td #[a(href="/"+consulta._id) #{consulta._id}]
            td= consulta.data
            td= consulta.nome
            td= consulta.idade
            td= consulta.sexo
            td= consulta.nr_operacoes
              
    footer.w3-container.w3-teal
      h5 Generated by Joana Pereira